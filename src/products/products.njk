---
layout: "base.html"
permalink: "/products/all/"
title: "Products"
---


<style>
  .wrap{max-width:1200px;margin:auto;padding:24px}
  h1{font-size:34px;margin:0 0 12px}
  h2{font-size:22px;margin:26px 0 12px}
  .grid{display:grid;grid-template-columns:repeat(4,1fr);gap:18px}
  @media (max-width:1024px){.grid{grid-template-columns:repeat(3,1fr)}}
  @media (max-width:760px){.grid{grid-template-columns:repeat(2,1fr)}}
  @media (max-width:460px){.grid{grid-template-columns:1fr}}
  .card{background:#fff;border:1px solid #eae7e3;border-radius:16px;overflow:hidden;display:flex;flex-direction:column}
  .media{height:190px;display:flex;align-items:center;justify-content:center;background:#f7f8fb}
  .media img{max-height:170px;max-width:90%;object-fit:contain}
  .body{padding:14px}
  .title{font-weight:700;margin:0 0 6px;font-size:16px}
  .meta{font-size:12px;color:#6b7280;margin-bottom:8px}
  .forms{display:flex;gap:6px;flex-wrap:wrap}
  .pill{font-size:11px;padding:3px 8px;border-radius:999px;background:#eef2ff;color:#1d4ed8;border:1px solid #dbe3ff}
</style>

<div class="wrap">
  <h1>Our Products</h1>

  <h2>Peptides</h2>
  <div class="grid">
    {% for p in products %}
      {% if p.category == "peptides" %}
        <div class="card">
          <a class="media" href="/product/{{ p.slug }}/"><img src="{{ p.image }}" alt="{{ p.name }}"></a>
          <div class="body">
            <h3 class="title"><a href="/product/{{ p.slug }}/">{{ p.name }}</a></h3>
            <div class="meta">Peptides</div>
            <div class="forms">
              {% if p.forms %}
                {% for f in p.forms %}
                  <span class="pill">{{ f | capitalize }}</span>
                {% endfor %}
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <h2>SARMS &amp; Performance</h2>
  <div class="grid">
    {% for p in products %}
      {% if p.category == "sarms-performance" %}
        <div class="card">
