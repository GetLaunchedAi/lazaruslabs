                  <span class="pill">{{ f | capitalize }}</span>
                {% endfor %}
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <h2>Supplies</h2>
  <div class="grid">
    {% for p in products %}
      {% if p.category == "supplies" %}
        <div class="card">
          <a class="media" href="/product/{{ p.slug }}/"><img src="{{ p.image }}" alt="{{ p.name }}"></a>
          <div class="body">
            <h3 class="title"><a href="/product/{{ p.slug }}/">{{ p.name }}</a></h3>
            <div class="meta">Supplies</div>
            <div class="forms">
              {% if p.forms %}
                {% for f in p.forms %}
                  <span class="pill">{{ f | capitalize }}</span>
                {% endfor %}
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
